<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>
    <!--    main rv textview style -->
    <style name="MainRvTextViewStyle">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--    main rv linear style-->
    <style name="MainRvLinearStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!--    main textview style -->
    <style name="MainTextViewStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!--    main temp style -->
    <style name="MainTempStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--  Login button style-->
    <style name="LoginBtnStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    PostRvCommentStyle -->
    <style name="PostRvCommentStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--    PostRvTitleStyle -->
    <style name="PostRvTitleStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color_ic</item>
    </style>

    <!--  Post button style-->
    <style name="PostBtnStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--    info title Style -->
    <style name="InfoTitleStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_ic_select</item>
    </style>

    <!--    line  Style -->
    <style name="LineStyle">
        <item name="android:background">#40A1A1A1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--    preference style -->
    <style name="preferenceStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
</resources>